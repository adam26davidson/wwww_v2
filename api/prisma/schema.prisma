generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameStage {
  WAITING_ROOM
  IN_PROGRESS
  ALL_PLAYERS_WAITING
  SENTENCES_CREATED
}

model Game {
  id            Int    @id @default(autoincrement())
  code          String @unique
  stage         GameStage
  players       Json   @db.Json
  sentences     Json   @db.Json
  permutations  Json   @db.Json
}